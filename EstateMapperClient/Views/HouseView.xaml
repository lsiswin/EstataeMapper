<UserControl
    x:Class="EstateMapperClient.Views.HouseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EstateMapperClient.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />

            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--  图片区域  -->
            <Border
                Margin="10"
                ClipToBounds="True"
                CornerRadius="6">
                <Grid>
                    <Image
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="https://pic4.ajkimg.com/display/xinfang/143e3591893f9cc129e3f18e35b8dccb/1080x10000.jpg"
                        Stretch="UniformToFill">
                        <Image.Clip>
                            <RectangleGeometry Rect="0,0,280,220" />
                        </Image.Clip>
                    </Image>

                </Grid>
            </Border>

            <!--  信息区域  -->
            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                <!--  标题行  -->
                <DockPanel Margin="10">
                    <TextBlock
                        FontSize="40"
                        FontWeight="UltraBold"
                        Text="{Binding Name}" />

                    <StackPanel
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Bottom"
                            Foreground="#959595"
                            Text="均价" />
                        <TextBlock
                            Margin="4,0,0,0"
                            FontSize="30"
                            Foreground="Red"
                            Text="{Binding Price}" />
                        <TextBlock
                            VerticalAlignment="Bottom"
                            Foreground="#959595"
                            Text="元/㎡" />
                    </StackPanel>
                </DockPanel>

                <!--  位置信息  -->
                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                    <materialDesign:PackIcon Foreground="#959595" Kind="MapMarker" />
                    <TextBlock
                        Margin="8,0,0,0"
                        FontSize="15"
                        Foreground="#959595"
                        Text="{Binding DetailAddress}" />
                </StackPanel>

                <!--  特色标签  -->
                <ItemsControl Margin="0,0" ItemsSource="{Binding Tags}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <materialDesign:Chip Content="{Binding TagName}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </StackPanel>
        </Grid>
        <DockPanel Grid.Row="1" HorizontalAlignment="Left">
            <TextBlock
                DockPanel.Dock="Top"
                FontSize="20"
                FontWeight="Bold"
                Text="主力户型" />
            <Border
                Padding="5"
                BorderBrush="#959595"
                BorderThickness="2">

                <ListBox ItemsSource="{Binding Layouts}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="5,0"
                                ClipToBounds="True"
                                CornerRadius="10">
                                <DockPanel>
                                    <Image
                                        Width="150"
                                        Height="150"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Top"
                                        Source="{Binding LayoutUrl}"
                                        Stretch="UniformToFill" />
                                    <TextBlock
                                        Margin="0,5"
                                        DockPanel.Dock="Top"
                                        Text="{Binding LayoutName}" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Border>
        </DockPanel>

    </Grid>
</UserControl>