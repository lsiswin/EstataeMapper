<UserControl
    x:Class="EstateMapperClient.Views.AddHouseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EstateMapperClient.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MaxWidth="600"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <materialDesign:Card
                Grid.Row="0"
                Margin="0,0,0,20"
                Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  标题区域  -->
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,16"
                        HorizontalAlignment="Center"
                        FontSize="28"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                        Text="{Binding Title}" />

                    <!--  表单内容  -->
                    <Grid x:Name="FormGrid" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  楼盘名称  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignBody1TextBlock}"
                            Text="楼盘名称" />
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,0"
                            materialDesign:HintAssist.Hint="输入楼盘名称"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  价格  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10,8"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignBody1TextBlock}"
                            Text="销售价格" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,8"
                            materialDesign:HintAssist.Hint="请输入楼盘单价(元/平米)"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding House.Price}" />

                        <!--  楼盘地址  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10,8"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignBody1TextBlock}"
                            Text="详细地址" />
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="10,8"
                            materialDesign:HintAssist.Hint="输入完整地址"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding House.DetailAddress}" />

                        <!--  区域选择  -->

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="10,8"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                            Text="所在区域" />

                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="1"
                            Orientation="Horizontal">
                            <local:RegionView DataContext="{Binding Region}" />
                        </StackPanel>
                        <!--  主图上传  -->
                        <Grid
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Width="300"
                                Height="200"
                                Background="#F5F5F5">
                                <Grid>
                                    <Image Source="{Binding MainImage.Thumbnail}" Stretch="Uniform" />
                                    <Button
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Command="{Binding UploadMainImageCommand}"
                                        Content="上传主图"
                                        Style="{StaticResource MaterialDesignRaisedButton}" />

                                </Grid>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Text="主图要求：" />
                                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" Text="- 只能上传1张主图" />
                                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" Text="- 支持JPG/PNG格式" />
                                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" Text="- 图片尺寸不小于1200x800" />
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Row="5" Grid.ColumnSpan="2">
                            <Button
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                Command="{Binding UploadFloorPlanCommand}"
                                Content="添加户型图"
                                IsEnabled="{Binding isLayoutChanged}"
                                Style="{StaticResource MaterialDesignOutlinedButton}" />

                            <ItemsControl
                                Width="500"
                                HorizontalAlignment="Left"
                                ItemsSource="{Binding Layouts}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="10" Background="#FAFAFA">
                                            <DockPanel>
                                                <TextBlock
                                                    Width="120"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding LayoutName}" />
                                                <Button
                                                    Command="{Binding DataContext.RemoveFloorPlanCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Content="{materialDesign:PackIcon Kind=Close}"
                                                    DockPanel.Dock="Right"
                                                    Style="{StaticResource MaterialDesignToolButton}" />
                                            </DockPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </StackPanel>
                        <Grid Grid.Row="6" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBox
                                    Width="300"
                                    materialDesign:HintAssist.Hint="输入标签后按添加"
                                    FontSize="20"
                                    Text="{Binding Path=NewTag.TagName, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                                    Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}">

                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding AddTagCommand}" />
                                    </TextBox.InputBindings>
                                </TextBox>

                                <Button
                                    Margin="20,0"
                                    Command="{Binding AddTagCommand}"
                                    Content="添加标签"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                            </StackPanel>

                            <!--  标签显示区域  -->
                            <ItemsControl
                                Grid.Row="1"
                                Margin="0,10"
                                ItemsSource="{Binding Tags}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Chip
                                            Margin="4"
                                            DeleteCommand="{Binding DataContext.RemoveTagCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            DeleteCommandParameter="{Binding}"
                                            IsDeletable="True">
                                            <TextBlock Margin="4,0" Text="{Binding TagName}" />
                                        </materialDesign:Chip>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                        <DockPanel Grid.Row="7" Grid.ColumnSpan="2">
                            <Button
                                Width="150"
                                Margin="0,10"
                                Command="{Binding SubmitCommand}"
                                Content="提交楼盘信息"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                            <Button
                                Width="150"
                                Margin="0,10"
                                HorizontalAlignment="Right"
                                Command="{Binding CanleCommand}"
                                Content="取消"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                        </DockPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>

    </ScrollViewer>
</UserControl>
